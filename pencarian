def linear_search(arr, target):
    """
    Fungsi untuk melakukan pencarian secara linier pada sebuah array.

    Parameters:
    arr (list): Array yang akan dicari.
    target: Nilai yang akan dicari dalam array.

    Returns:
    int: Indeks pertama tempat nilai ditemukan, atau -1 jika tidak ditemukan.
    """
    for i in range(len(arr)):
        if arr[i] == target:
            return i
    return -1

# Contoh penggunaan:
data = [5, 10, 15, 20, 25, 30]
target_value = 15
result = linear_search(data, target_value)

if result != -1:
    print(f"Nilai {target_value} ditemukan di indeks ke-{result}.")
else:
    print("Nilai tidak ditemukan dalam array.")
